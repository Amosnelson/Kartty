<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="4dp"
    android:elevation="3dp"
    android:background="@drawable/slide_background"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/horizontal_productImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iphone" />

    <TextView
        android:id="@+id/horizontal_productTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Samsung A30"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_productImage" />

    <TextView
        android:id="@+id/horizontal_productDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ram 2gb SD 425"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="@color/successGreen"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_productPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_productTitle" />

    <TextView
        android:id="@+id/horizontal_productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$2000"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>